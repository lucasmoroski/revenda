{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch ResaleApi",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-resaleapi", // Certifique-se que essa task existe em tasks.json
      "program": "${workspaceFolder}/src/ResaleApi/bin/Debug/net8.0/ResaleApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/ResaleApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openBrowser",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch CompanyRequestApi",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-companyrequestapi", // Certifique-se que essa task existe em tasks.json
      "program": "${workspaceFolder}/src/CompanyRequestApi/bin/Debug/net8.0/CompanyRequestApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/CompanyRequestApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openBrowser",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/swagger"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
    // Não se esqueça de adicionar a configuração para o frontend React aqui se quiser depurá-lo junto!
    // Exemplo:
    // {
    //     "name": "Launch React (Chrome)",
    //     "type": "chrome",
    //     "request": "launch",
    //     "url": "http://localhost:5173", // Ajuste para a porta do seu projeto React
    //     "webRoot": "${workspaceFolder}/frontend/revenda-app/src",
    //     "sourceMaps": true,
    //     "preLaunchTask": "npm: dev" // Se você usa 'npm run dev'
    // }
  ],
  "compounds": [
    {
      "name": "Launch All APIs",
      "configurations": [
        "Launch ResaleApi",
        "Launch CompanyRequestApi"
      ],
      "stopAll": true // Se uma sessão parar, todas as outras param
    },
    {
      "name": "Launch All (APIs + React)", // Opcional: para rodar frontend junto
      "configurations": [
        "Launch ResaleApi",
        "Launch CompanyRequestApi",
        "Launch React (Chrome)"
      ],
      "stopAll": true
    }
  ]
}